class test

instance variables
  private 平均点 : nat := 70;

operations
  ボーダーラインを取得: () ==> nat
    ボーダーラインを取得 () ==
      if(平均点 < 60) then
        return 平均点
      else
        return 60;

  平均点と比較: nat ==> seq of char
    平均点と比較 (テスト点) ==
      if(テスト点 >= 平均点) then
        return "平均点以上"
      else
        return "平均点未満";

functions
  成績を確認: nat * nat -> seq of char
    成績を確認 (テスト点) ==
      if(テスト点 < 60) then
        "再テスト"
      else
        平均点と比較 (テスト点)
    pre テスト点 <= 100;

end test